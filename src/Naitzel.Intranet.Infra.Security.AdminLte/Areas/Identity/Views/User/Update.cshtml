@model UserUpdateViewModel
@{
    Layout = "_UDefault";
}

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Cadastrar Usu√°rio</h3>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id">
        <div class="box-body">

            <div class="row">
                <div class="col-xs-6">
                    <div class="form-group has-feedback">
                        <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.FirstName)">
                        <span class="fa fa-user-o form-control-feedback"></span>
                    </div>
                </div>
                <div class="col-xs-6">
                    <div class="form-group has-feedback">
                        <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.LastName)">
                        <span class="fa fa-user-o form-control-feedback"></span>
                    </div>
                </div>
            </div>

            <div class="form-group has-feedback">
                <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)">
                <span class="fa fa-envelope-o form-control-feedback"></span>
            </div>

            <div class="row">
                <div class="col-sm-4 col-xs-12">
                    <div class="form-group has-feedback">
                        <input asp-for="UserName" class="form-control" autocomplete="false" placeholder="@Html.DisplayNameFor(m => m.UserName)">
                        <span class="fa fa-id-card-o form-control-feedback"></span>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group has-feedback">
                        <input asp-for="Password" type="password" autocomplete="false" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Password)">
                        <span class="fa fa-key form-control-feedback"></span>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6">
                    <div class="form-group has-feedback">
                        <input asp-for="ConfirmPassword" type="password" autocomplete="false" class="form-control" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword)">
                        <span class="fa fa-key form-control-feedback"></span>
                    </div>
                </div>
            </div>



            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <div class="box-footer">
            <a asp-controller="User" asp-action="Index" asp-area="Identity" class="btn btn-default btn-flat pull-left">
                <i class="fa fa-angle-double-left" aria-hidden="true"></i> &nbsp; Cancelar
            </a>

            <button type="submit" class="btn btn-default btn-flat pull-right">
                <i class="fa fa-floppy-o" aria-hidden="true"></i> &nbsp; Atualizar
            </button>
        </div>
    </form>
</div>